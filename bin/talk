#!/bin/bash

CACHE=/home/snarayan/.talkfile # location of file on t3desk001

if [[ "$1" == "clean" ]] ; then
    ssh snarayan@t3desk001.mit.edu "echo -n "" > ${CACHE}"
elif [[ "$1" == "listen" ]] ; then
    ssh snarayan@t3desk001.mit.edu  "tail -f $CACHE"
else
    ssh snarayan@t3desk001.mit.edu  "echo $@ >> $CACHE"
fi

